<%= link_to 'Home', root_path %>
<H2>signup here<h2>
<% if @details.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
  <% @details.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
 
<%= form_for @details do |f| %>
<p><%= f.label :loginId %><br/>
  <%= f.text_field :loginId %>
</p>
<p>
  <%= f.label :password %><br/>
  <%= f.text_field :password %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>