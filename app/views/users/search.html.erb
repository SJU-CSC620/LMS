<% if logged_in?%>
<%= link_to 'Home', user_path %>
<p><%= link_to 'Log out', logout_path, method: :delete %><p/>
<p><%= link_to 'Edit Profile', edit_user_path(@user)%></p>
<%= form_tag(results_user_path, method: "get") do %>
      <%= label_tag(:q, "Keyword:") %>
      <%= text_field_tag(:keyWord) %><br>
      <%= radio_button_tag(:searchtype, "title", checked = true) %>
      <%= label_tag(:title, "Book Title") %>
      <%= radio_button_tag(:searchtype, "author") %>
      <%= label_tag(:author, "Author") %>
      <%= radio_button_tag(:searchtype, "category" ) %>
      <%= label_tag(:category, "category" ) %>
      <%= submit_tag("Search") %>
<% end %>
<%else%>
<% redirect_to login_path%>
<%  end%>