<%= render 'shared/errors', obj: @user %>
<%= render 'shared/errors', obj: @cred %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
<%= link_to 'Back', root_path %>

<%= form_for @user do |f| %>
<%= f.label :fname ,'First Name' , autofocus: true%><br/>
  <%= f.text_field :fname, class: 'form-control'  %>
</br>

<%= f.label :lname , 'Last Name' %><br/>
  <%= f.text_field :lname, class: 'form-control'  %>
</br>

<%= f.label :email ,'Email'%><br/>
  <%= f.email_field :email, class: 'form-control'  %>
</br>

  <%= f.label :username , 'Username'%><br/>
  <%= f.text_field :username, class: 'form-control'  %>
</br>

  <%= f.fields_for :cred do |e| %>
    <%= e.label :password, "password" %><br/>
    <%= password_field_tag :password, class: 'form-control'  %>
  <% end %>
  <!--<%= label_tag :password, 'password' %><br/>-->
  <!--<%= password_field_tag :password, class: 'form-control'  %>-->
</br>
</br>

  <%= f.submit "Sign-up" , class: "btn btn-primary btn-block" %>

<% end %>

 </div>
</div>
